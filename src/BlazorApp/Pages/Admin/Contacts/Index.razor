@page "/admin/contacts"
@layout AdminLayout
@using Application.Contact.Queries.DTOs
@inject IContactService ContactService
@inject NavigationManager NavigationManager

<PageTitle>Contact Submissions</PageTitle>

<div class="admin-page">
    <div class="admin-page-header">
        <div>
            <h1 class="admin-page-title">Contact Submissions</h1>
            <p class="admin-page-subtitle">Manage contact form submissions</p>
        </div>
        @if (submissions.Any())
        {
            <div>
                <span class="badge bg-danger">@unreadCount Unread</span>
            </div>
        }
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading submissions...</p>
        </div>
    }
    else if (!submissions.Any())
    {
        <div class="empty-state">
            <i class="bi bi-envelope"></i>
            <h3>No submissions yet</h3>
            <p>Contact form submissions will appear here</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover admin-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submission in submissions)
                    {
                        <tr class="@(submission.IsRead ? "" : "table-warning")">
                            <td>
                                <div>@submission.SubmittedDate.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@submission.SubmittedDate.ToString("h:mm tt")</small>
                            </td>
                            <td>
                                <strong>@submission.Name</strong>
                            </td>
                            <td>
                                <small class="text-muted">@submission.Email</small>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(submission.Subject))
                                {
                                    <span>@submission.Subject</span>
                                }
                                else
                                {
                                    <small class="text-muted">-</small>
                                }
                            </td>
                            <td>
                                @if (submission.IsRead)
                                {
                                    <span class="badge bg-secondary">Read</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unread</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-primary" @onclick="() => ViewSubmission(submission)" title="View">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    @if (!submission.IsRead)
                                    {
                                        <button class="btn btn-outline-success" @onclick="() => MarkAsRead(submission.Id, true)" title="Mark as Read">
                                            <i class="bi bi-check"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-warning" @onclick="() => MarkAsRead(submission.Id, false)" title="Mark as Unread">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    }
                                    <button class="btn btn-outline-danger" @onclick="() => ConfirmDelete(submission)" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- View Submission Modal -->
@if (selectedSubmission != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Contact Submission Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseViewModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Name:</strong>
                            <p class="mb-0">@selectedSubmission.Name</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Email:</strong>
                            <p class="mb-0">
                                <a href="mailto:@selectedSubmission.Email">@selectedSubmission.Email</a>
                            </p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Date:</strong>
                            <p class="mb-0">@selectedSubmission.SubmittedDate.ToString("MMMM dd, yyyy h:mm tt")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            <p class="mb-0">
                                @if (selectedSubmission.IsRead)
                                {
                                    <span class="badge bg-secondary">Read</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Unread</span>
                                }
                            </p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(selectedSubmission.Subject))
                    {
                        <div class="mb-3">
                            <strong>Subject:</strong>
                            <p class="mb-0">@selectedSubmission.Subject</p>
                        </div>
                    }
                    <div>
                        <strong>Message:</strong>
                        <div class="card mt-2">
                            <div class="card-body">
                                <p class="mb-0" style="white-space: pre-wrap;">@selectedSubmission.Message</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    @if (!selectedSubmission.IsRead)
                    {
                        <button type="button" class="btn btn-success" @onclick="() => MarkAsReadAndClose(selectedSubmission.Id)">
                            <i class="bi bi-check"></i> Mark as Read
                        </button>
                    }
                    <button type="button" class="btn btn-secondary" @onclick="CloseViewModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (showDeleteConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this contact submission?</p>
                    <p class="text-muted mb-0">From: <strong>@submissionToDelete?.Name</strong> (@submissionToDelete?.Email)</p>
                    <p class="text-danger mt-2 mb-0"><small><i class="bi bi-exclamation-triangle"></i> This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete" disabled="@isDeleting">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="HandleDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            <span>Deleting...</span>
                        }
                        else
                        {
                            <span>Delete</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Application.Contact.Queries.DTOs.ContactSubmissionDto> submissions = new();
    private bool isLoading = true;
    private bool showDeleteConfirm = false;
    private bool isDeleting = false;
    private Application.Contact.Queries.DTOs.ContactSubmissionDto? submissionToDelete = null;
    private Application.Contact.Queries.DTOs.ContactSubmissionDto? selectedSubmission = null;
    private int unreadCount => submissions.Count(s => !s.IsRead);

    protected override async Task OnInitializedAsync()
    {
        await LoadSubmissions();
    }

    private async Task LoadSubmissions()
    {
        isLoading = true;
        submissions = await ContactService.GetAllContactSubmissionsAsync();
        isLoading = false;
    }

    private void ViewSubmission(Application.Contact.Queries.DTOs.ContactSubmissionDto submission)
    {
        selectedSubmission = submission;
    }

    private void CloseViewModal()
    {
        selectedSubmission = null;
    }

    private async Task MarkAsReadAndClose(int id)
    {
        await MarkAsRead(id, true);
        selectedSubmission = null;
    }

    private async Task MarkAsRead(int id, bool isRead)
    {
        var success = await ContactService.MarkAsReadAsync(id, isRead);
        if (success)
        {
            await LoadSubmissions();
        }
        else
        {
            Console.WriteLine("Failed to mark submission as read");
        }
    }

    private void ConfirmDelete(Application.Contact.Queries.DTOs.ContactSubmissionDto submission)
    {
        submissionToDelete = submission;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirm = false;
        submissionToDelete = null;
    }

    private async Task HandleDelete()
    {
        if (submissionToDelete == null) return;

        isDeleting = true;
        var success = await ContactService.DeleteSubmissionAsync(submissionToDelete.Id);

        if (success)
        {
            showDeleteConfirm = false;
            submissionToDelete = null;
            await LoadSubmissions();
        }
        else
        {
            Console.WriteLine("Failed to delete submission");
        }

        isDeleting = false;
    }
}
