@page "/admin/settings"
@layout AdminLayout
@using Application.Settings.Queries.DTOs
@inject ISettingsService SettingsService
@inject NavigationManager NavigationManager

<PageTitle>Manage Settings</PageTitle>

<div class="admin-page">
    <div class="admin-page-header">
        <div>
            <h1 class="admin-page-title">Settings</h1>
            <p class="admin-page-subtitle">Manage site configuration</p>
        </div>
        <button class="btn btn-primary" @onclick="NavigateToCreate">
            <i class="bi bi-plus-circle"></i> Add New Setting
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading settings...</p>
        </div>
    }
    else if (!settings.Any())
    {
        <div class="empty-state">
            <i class="bi bi-gear"></i>
            <h3>No settings configured</h3>
            <p>Get started by adding your first setting</p>
            <button class="btn btn-primary mt-3" @onclick="NavigateToCreate">
                <i class="bi bi-plus-circle"></i> Add Setting
            </button>
        </div>
    }
    else
    {
        @foreach (var category in GetCategories())
        {
            var categorySettings = settings.Where(s => s.Category == category).OrderBy(s => s.Key).ToList();
            if (categorySettings.Any())
            {
                <div class="mb-4">
                    <h3 class="mb-3">@category</h3>
                    <div class="table-responsive">
                        <table class="table table-hover admin-table">
                            <thead>
                                <tr>
                                    <th>Key</th>
                                    <th>Value</th>
                                    <th>Last Modified</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var setting in categorySettings)
                                {
                                    <tr>
                                        <td>
                                            <strong>@setting.Key</strong>
                                        </td>
                                        <td>
                                            <span class="text-truncate d-inline-block" style="max-width: 400px;">
                                                @setting.Value
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted">@setting.LastModified.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</small>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => NavigateToEdit(setting.Id)">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(setting)">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteModal && settingToDelete != null)
{
    <div class="modal-backdrop show"></div>
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this setting?</p>
                    <div class="alert alert-warning">
                        <strong>Key:</strong> @settingToDelete.Key<br />
                        <strong>Category:</strong> @settingToDelete.Category
                    </div>
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-triangle"></i> This action cannot be undone.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteSetting" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Delete Setting
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<SettingsDto> settings = new();
    private bool isLoading = true;
    private bool showDeleteModal = false;
    private bool isDeleting = false;
    private SettingsDto? settingToDelete;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        isLoading = true;
        settings = await SettingsService.GetAllSettingsAsync();
        isLoading = false;
    }

    private List<string> GetCategories()
    {
        return settings.Select(s => s.Category).Distinct().OrderBy(c => c).ToList();
    }

    private void NavigateToCreate()
    {
        NavigationManager.NavigateTo("/admin/settings/create");
    }

    private void NavigateToEdit(int id)
    {
        NavigationManager.NavigateTo($"/admin/settings/edit/{id}");
    }

    private void ConfirmDelete(SettingsDto setting)
    {
        settingToDelete = setting;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        settingToDelete = null;
        showDeleteModal = false;
    }

    private async Task DeleteSetting()
    {
        if (settingToDelete == null) return;

        isDeleting = true;
        var success = await SettingsService.DeleteSettingAsync(settingToDelete.Id);
        isDeleting = false;

        if (success)
        {
            showDeleteModal = false;
            settingToDelete = null;
            await LoadSettings();
        }
    }
}
