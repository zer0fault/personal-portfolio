@page "/"
@inject IProjectsService ProjectsService

<PageTitle>Home</PageTitle>

<h1>Personal Portfolio - Austin Little</h1>

<h2>Projects</h2>

@if (projects == null)
{
    <p><em>Loading projects...</em></p>
}
else if (!projects.Any())
{
    <p><em>No projects found.</em></p>
}
else
{
    <div class="row">
        @foreach (var project in projects)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@project.ShortDescription</p>
                        <div class="mb-2">
                            @foreach (var tech in project.Technologies)
                            {
                                <span class="badge bg-primary me-1">@tech</span>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(project.GitHubUrl))
                        {
                            <a href="@project.GitHubUrl" class="btn btn-sm btn-outline-primary" target="_blank">View on GitHub</a>
                        }
                        @if (!string.IsNullOrEmpty(project.LiveDemoUrl))
                        {
                            <a href="@project.LiveDemoUrl" class="btn btn-sm btn-outline-success ms-2" target="_blank">Live Demo</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Application.Projects.Queries.DTOs.ProjectDto>? projects;

    protected override async Task OnInitializedAsync()
    {
        projects = await ProjectsService.GetAllProjectsAsync();
    }
}
