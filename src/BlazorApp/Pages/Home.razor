@page "/"
@inject IProjectsService ProjectsService
@using BlazorApp.Components

<PageTitle>Austin Little - Portfolio</PageTitle>

<!-- Hero Section -->
<HeroSection />

<!-- About Section -->
<AboutSection />

<!-- Skills Section -->
<SkillsSection />

<!-- Projects Section -->
<section class="projects-section" id="projects">
    <div class="container">
        <h2 class="section-title">Featured Projects</h2>

        @if (projects == null)
        {
            <p><em>Loading projects...</em></p>
        }
        else if (!projects.Any())
        {
            <p><em>No projects found.</em></p>
        }
        else
        {
            <div class="row">
                @foreach (var project in projects)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card project-card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@project.Title</h5>
                                <p class="card-text">@project.ShortDescription</p>
                                <div class="mb-3">
                                    @foreach (var tech in project.Technologies)
                                    {
                                        <span class="badge bg-primary me-1 mb-1">@tech</span>
                                    }
                                </div>
                                <div class="card-actions">
                                    @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                    {
                                        <a href="@project.GitHubUrl" class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="bi bi-github"></i> GitHub
                                        </a>
                                    }
                                    @if (!string.IsNullOrEmpty(project.LiveDemoUrl))
                                    {
                                        <a href="@project.LiveDemoUrl" class="btn btn-sm btn-outline-success ms-2" target="_blank">
                                            <i class="bi bi-box-arrow-up-right"></i> Live Demo
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- Employment Section -->
<EmploymentSection />

@code {
    private List<Application.Projects.Queries.DTOs.ProjectDto>? projects;

    protected override async Task OnInitializedAsync()
    {
        projects = await ProjectsService.GetAllProjectsAsync();
    }
}
